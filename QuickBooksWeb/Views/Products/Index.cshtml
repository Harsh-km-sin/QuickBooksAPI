@model IEnumerable<QuickBooksWeb.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>
<div class="mb-3">
    <form asp-action="Sync" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Sync from QuickBooks</button>
    </form>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Unit Price</th>
            <th>Qty on Hand</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model ?? Enumerable.Empty<QuickBooksWeb.Models.Product>())
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Type</td>
                <td>@p.UnitPrice.ToString("C")</td>
                <td>@(p.QtyOnHand?.ToString() ?? "-")</td>
                <td>@(p.Active ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>
@if (!(Model?.Any() ?? false))
{
    <p class="text-muted">No products yet. Click Sync from QuickBooks to import.</p>
}
